<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:weightSum="1"
        android:id="@+id/linearLayout">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Launch"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="268dp"
            android:layout_height="wrap_content"
            android:text="Launch URL in browser"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/urlText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:layout_marginTop="14dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="URL" />

        <Button
            android:id="@+id/siLaunch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Launch Samsung Internet (Gear VR)" />

        <Button
            android:id="@+id/sicustomLaunch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LAUNCH SI Custom Tab" />

        <Button
            android:id="@+id/simLaunch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Launch Samsung Internet" />

        <Button
            android:id="@+id/simbetaLaunch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="launch S. INTERNET  - beta" />

        <Button
            android:id="@+id/oculusLaunch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Launch Oculus Browser" />

        <Button
            android:id="@+id/cctLaunch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Launch Chrome Custom Tab" />

        <RadioGroup
            android:id="@+id/chromeGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/stableC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/linearLayout"
                android:layout_marginTop="2dp"
                android:text="Stable:xx"
                android:textSize="12dp" />

            <RadioButton
                android:id="@+id/betaC"
                android:layout_width="79dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/linearLayout"
                android:layout_marginTop="2dp"
                android:text="Beta:xx"
                android:textSize="12dp" />

            <RadioButton
                android:id="@+id/devC"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/linearLayout"
                android:layout_marginTop="2dp"
                android:layout_weight="0.20"
                android:text="Dev:xx"
                android:textSize="12dp" />

            <RadioButton
                android:id="@+id/canaryC"
                android:layout_width="79dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/linearLayout"
                android:layout_marginTop="2dp"
                android:layout_weight="0.13"
                android:text="Can:xx"
                android:textSize="12dp" />

        </RadioGroup>

    </LinearLayout>

</RelativeLayout>
